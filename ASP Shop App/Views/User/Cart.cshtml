@model List<Product>


@if (Model.Count > 0)
{

    <div class="container row row-cols-2 row-cols-md-2 g-2">
        @foreach (var item in Model)
        {
            <div class="card col mb-4 ml-2" style="width: 18rem; margin-left: 4px;">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Price: @item.Price</h6>
                    <p class="card-text">@item.Description</p>
                </div>
            </div>
        }
    </div>
    <a class="btn btn-primary" asp-controller="User" asp-action="Order">Order</a>
}
else
{
    <h1>Empty</h1>
}